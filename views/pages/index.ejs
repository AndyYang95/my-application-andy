          <a href="#">Contact</a>
      </div>
  </nav>
  
  
  
  <div id="main">
    <div class="container">
     
      
      <div class="choices">
      <i id="paper" class="choice fas fa-hand-paper fa-8x"></i>
      <i id="scissors" class="choice fas fa-hand-scissors fa-8x"></i>
      <i id="rock" class="choice fas fa-hand-rock fa-8x"></i>
      </div>
      
      <div class="header">
          <h1>Paper Scissors Rock!</h1>
          <h2>Make Your Selection.</h2>
          <button id="restart" class="restart-btn">RESTART</button>
          <div id="score" class="score">
              <p>Player: 0</p>
              <p>Computer: 0</p>
          </div>
      </div>
      
  </div>
  </div>
  
  
  <!--Modal Dialog-->
  <div class="modal">
     <a href="#" class="btn-close" onclick="closeModal()">&times;</a>
      <div id="result" class="modal-content">
          <h1 class="text-win">You WIN!</h1>
          <i class="fas fa-hand-paper fa-10x"></i>
          <p>Computer chose 'PAPER'!</p>
      </div>
  </div>
   
   
   
   
   
<script>
    function openSideMenu(){
        document.getElementById('side-menu').style.width='200px';
        document.getElementById('main').style.marginLeft='200px';
    }
    function CloseSideMenu(){
        document.getElementById('side-menu').style.width='0px';
        document.getElementById('main').style.marginLeft='0px';
    }
    
</script>
    
<script src="/js/project1.js"></script>    
